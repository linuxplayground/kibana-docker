# This Dockerfile was generated from the template at templates/Dockerfile.j2
{% if artifacts_dir -%}
{%   set url_root = 'http://localhost:8000/kibana/target' -%}
{%   set x_pack = 'http://localhost:8000/x-pack-kibana/build/distributions/x-pack-%s.zip' % elastic_version -%}
{% elif staging_build_num -%}
{%   set version_tag = elastic_version + '-' + staging_build_num -%}
{%   set url_root = 'https://staging.elastic.co/%s/downloads/kibana' % version_tag -%}
{%   set x_pack = 'https://staging.elastic.co/%s/downloads/kibana-plugins/x-pack/x-pack-%s.zip' % (version_tag, elastic_version) -%}
{% else -%}
{%   set version_tag = elastic_version -%}
{%   set url_root = 'https://artifacts.elastic.co/downloads/kibana' -%}
{%   set x_pack = 'x-pack' -%}
{% endif -%}

FROM centos:7
LABEL maintainer "Elastic Docker Team <docker@elastic.co>"
EXPOSE 5601

# Add Reporting dependencies.
RUN yum update -y && yum install -y fontconfig freetype unzip && yum clean all

WORKDIR /usr/share/kibana
RUN curl -Ls {{ url_root }}/kibana-{{ elastic_version }}-linux-x86_64.tar.gz | tar --strip-components=1 -zxf - && \
    ln -s /usr/share/kibana /opt/kibana

ENV ELASTIC_CONTAINER true
ENV PATH=/usr/share/kibana/bin:$PATH

# Set some Kibana configuration defaults.
COPY config/kibana-{{ image_flavor }}.yml /usr/share/kibana/config/kibana.yml

# Add the launcher/wrapper script. It knows how to interpret environment
# variables and translate them to Kibana CLI options.
COPY bin/kibana-docker /usr/local/bin/

# Add a self-signed SSL certificate for use in examples.
COPY ssl/kibana.example.org.* /usr/share/kibana/config/

# Provide a non-root user to run the process.
RUN groupadd --gid 1000 kibana && \
    useradd --uid 1000 --gid 1000 \
      --home-dir /usr/share/kibana --no-create-home \
      kibana
USER kibana
{% if image_flavor != 'oss' %}
RUN kibana-plugin install {{ x_pack }}
{% endif %}
# Install custom plugins
{% if image_flavor == 'oss' %}
RUN kibana-plugin install https://github.com/prelert/kibana-swimlane-vis/releases/download/v{{ elastic_version }}/prelert_swimlane_vis-{{ elastic_version }}.zip
RUN curl -o /tmp/kibana-plugin-metric-percent.zip -L https://github.com/amannocci/kibana-plugin-metric-percent/archive/master.zip && \
    cd /usr/share/kibana/plugins && \
    unzip /tmp/kibana-plugin-metric-percent.zip && \
    sed -i '/"version":/ s/"version":[^,]*/"version":"{{ elastic_version }}"/'  kibana-plugin-metric-percent-master/package.json
{% endif %}
CMD ["/bin/bash", "/usr/local/bin/kibana-docker"]
